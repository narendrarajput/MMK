<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="MyMoneyKart">
  <parameter name="browser" value="chrome" />
  <listeners>      
       <listener class-name="org.uncommons.reportng.HTMLReporter"/>
       <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
  </listeners>

  <test name="MyMoneyKart_Functional_Test">
 	<classes>  	
 		<class name="com.mmk.reader.LogWriter"/>
 		<class name="com.mmk.driversetup.DriverSetup"/>	 		
	 	<class name="com.mmk.testexecuter.MMKMainSuitExecuter">
	 		<methods>
        		<include name="login" />
        		<include name="checkUserWallet" />   		
        		<include name="submitFeedback" />
        		<include name="inviteFriend" />
        		<include name="changePassword" />
        		<include name="walletTransactionHistory" />
       		 </methods>
	 	</class> 
   </classes> 
  </test>
  
     <test name="BusBooking_Functional_Test">
 	 <classes>  	
	 	<class name="com.mmk.testexecuter.MMKBusSuitExecuter"> 
     	 	  <methods>
        		<include name="busSearch" />
        		<include name="busListPageLogin" />
        		<include name="selectABusSeat" />
        		<include name="fillPassangerDetails" />
        		<include name="enterWalletAndCheckout" />
        		<include name="ticketBookingStatus" />
      		  </methods>    		
      		</class>
     </classes> 
  </test>
  
    <test name="Utility_Functional_Test">
 	 <classes>  	
 	 	<class name="com.mmk.testexecuter.MMKUtilitySuitExecuter">
 	 		<methods>
        		<include name="prepaidMobileRecharge" />
        		<include name="postpaidMobileRecharge" />
        		<include name="dthRecharge" />
      		</methods>
 	 	</class>
     </classes> 
  </test>
</suite>
